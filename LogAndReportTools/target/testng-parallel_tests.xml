<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="YandexDisk parallel tests suite" parallel="tests" thread-count="2" verbose="1">
    <listeners>
        <listener class-name = "main.java.Framework.util.TestListener" />
    </listeners>
    <test name="Thread 0: Login test" verbose="1">
        <classes>
            <class name="test.java.YandexDiskTests.SmokeTest">
                <methods>
                    <include name="yandexDiscSmokeTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Thread 1: Nav block test" verbose="1">
        <classes>
            <class name="test.java.YandexDiskTests.YandexDiskTests">
                <methods>
                    <include name="yandexDiskNavigationBlockTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Thread 2: Create folder test" verbose="1">
        <classes>
            <class name="test.java.YandexDiskTests.YandexDiskTests">
                <methods>
                    <include name="yandexDiscCreateFolderTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>